<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/StandardPadding"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/card_shape"
                android:clickable="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                android:outlineProvider="bounds"
                android:id="@+id/meanOfTransportListItem">


    <RadioButton
        android:id="@+id/meanOfTransportRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/meanOfTransportItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/meanOfTransportRadioButton"
        android:layout_toStartOf="@+id/moreButton"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Mean of Transport"
        android:textSize="18sp"
        />

    <ImageButton
        android:id="@+id/moreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/more"
        android:contentDescription="@string/meanOfTransportImageButtonDescription"
        android:scaleX="0.5"
        android:scaleY="0.5"/>

</RelativeLayout>